<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:focusable="true"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#086A87">

                <ImageView
                    android:id="@+id/headerimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/coolection_summary1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Collection Summary 23-Feb-2016 (M)"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- <View
                 android:id="@+id/view1"
                 android:layout_width="match_parent"
                 android:layout_height="4dp"
                 android:layout_below="@+id/l1"
                 android:layout_marginBottom="2dp"
                 android:layout_marginTop="5dp"
                 android:background="@color/white" />

             <FrameLayout
                 android:id="@+id/container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="90dp"
                 android:layout_marginBottom="60dp"/>-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row5"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:focusable="true"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".60" />

                <android.support.v7.widget.CardView
                    android:id="@+id/row2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".40"
                    android:focusable="true"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/total_collection_milk"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/total_collection_milk"
                            android:textColor="#708090"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_collection_amount"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/total_collection_amount"
                            android:textColor="#FFBB33"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/thinline" />

                        <TextView
                            android:id="@+id/local_collection_milk"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/local_collection_milk"
                            android:textColor="#708090"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/local_collection_amount"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/total_collection_amount"
                            android:textColor="#FFBB33"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/thinline" />

                        <TextView
                            android:id="@+id/truck_collection_milk"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/truck_collection_milk"
                            android:textColor="#708090"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/truck_collection_amount"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/total_collection_amount"
                            android:textColor="#FFBB33"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/thinline" />

                        <TextView
                            android:id="@+id/summary_heading"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="0dp"
                            android:background="#086A87"
                            android:drawableRight="@drawable/summary"
                            android:gravity="left|center_horizontal"
                            android:text="Summary:"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/summary_collection_milk"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/summary_collection_milk"
                            android:textColor="@color/textHeadingColor"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                        <!--<TextView
                            android:id="@+id/quan_mismatch_milk"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="Quantity Mismatch"
                            android:textColor="@color/textHeadingColor"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            />-->
                        <TextView
                            android:id="@+id/summary_collection_amount"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="0dp"
                            android:gravity="left|center_horizontal"
                            android:text="@string/summary_collection_amount"
                            android:textColor="@color/textHeadingColor"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view6"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/thinline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="right|bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:text="Milk in lts." />

                            <Button
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="#708090"
                                android:gravity="left" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="right|bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="Amount in Rs." />

                            <Button
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:background="#FFBB33" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="1dp"
        android:focusable="true"
        app:cardCornerRadius="6dp">

        <LinearLayout
