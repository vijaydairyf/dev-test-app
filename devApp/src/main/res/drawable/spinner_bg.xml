<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:drawable="@drawable/spinner_bg_normal" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />

    <!-- Selected state-->
    <item android:drawable="@drawable/spinner_bg_normal" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />
    <!-- Focused states -->
    <item android:drawable="@drawable/btn_bg_focusable" android:state_focused="true" />
    <!-- Pressed state -->
    <item android:drawable="@drawable/spinner_bg_normal" android:state_pressed="true" />

</selector>