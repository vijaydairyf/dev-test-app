<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.devapp.peripherals.activities.ChangeIpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#104386"
        android:gravity="center"
        android:text="Change Wisens Ip"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext_circle"
            android:gravity="center"
            android:text="FROM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@drawable/custom_edittext_circle"
            android:gravity="center"
            android:text="TO" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/from_sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/Set_baudrate" />

        <Spinner
            android:id="@+id/to_sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/Set_baudrate" />
    </LinearLayout>


    <Button
        android:id="@+id/clear_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/btn_selector_positive"
        android:gravity="center"
        android:onClick="changeIp"
        android:padding="10dp"
        android:text="Change Ip"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
