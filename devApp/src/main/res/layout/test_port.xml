<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lnButton"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/strawberry_cream"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@color/strawberry_cream"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view1="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view1:cardBackgroundColor="@color/white"
                    card_view1:cardCornerRadius="5dp"
                    card_view1:cardElevation="4dp"
                    card_view1:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvPower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/power"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/not_applicable"
                        android:gravity="center"
                        android:text="@string/power"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/enable_port"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvPort1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/milk_analyser"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/one"
                        android:gravity="center"
                        android:text="@string/ma1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view1="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view1:cardBackgroundColor="@color/white"
                    card_view1:cardCornerRadius="5dp"
                    card_view1:cardElevation="4dp"
                    card_view1:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/data"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/not_applicable"
                        android:gravity="center"
                        android:text="@string/data"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/enable_port"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvPort2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/milk_analyser"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/two"
                        android:gravity="center"
                        android:text="@string/ma2"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/strawberry_cream"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/enable_port"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvPort3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/rdu"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/three"
                        android:gravity="center"
                        android:text="@string/rdu"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view1="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view1:cardBackgroundColor="@color/white"
                    card_view1:cardCornerRadius="5dp"
                    card_view1:cardElevation="4dp"
                    card_view1:cardMaxElevation="6dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/milk_analyser"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/two"
                        android:gravity="center"
                        android:text="@string/ma2"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="invisible"

                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/strawberry_cream"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view1="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view1:cardBackgroundColor="@color/white"
                    card_view1:cardCornerRadius="5dp"
                    card_view1:cardElevation="4dp"
                    card_view1:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvScanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/scanner"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/not_applicable"
                        android:gravity="center"
                        android:text="@string/scanner"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/enable_port"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvPort4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/weighing_scale"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/four"
                        android:gravity="center"
                        android:text="@string/ws"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/strawberry_cream"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:card_view1="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view1:cardBackgroundColor="@color/white"
                    card_view1:cardCornerRadius="5dp"
                    card_view1:cardElevation="4dp"
                    card_view1:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvKeyboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/keyboard"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/not_applicable"
                        android:gravity="center"
                        android:text="@string/keyboard"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/enable_port"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="4dp"
                    card_view:cardMaxElevation="6dp">

                    <TextView
                        android:id="@+id/tvPort5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/printer_fill"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/five"
                        android:gravity="center"
                        android:text="@string/printer"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/lnButton"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_row="5"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_negative"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Back"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_row="5"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_positive"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Save"
            android:textColor="#ffffff" />


    </LinearLayout>

</RelativeLayout>
